      <script src="js/html5shiv.min.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->

</head>
<body class="home">
   
<section class="row" style="background-color:white;">
    <div class="row media-grid content_video_posts" style="margin:5%;">
        <div class="row">
            <h1>Leader Board</h1>
        </div>
        <div class="row m0 widget widget_recommended_to_follow">
            <div class="row m0 inner">

                @if (Model.leaderVM != null && Model.leaderVM.Count > 0)
                {
                    for (int i = 0; i <= Model.leaderVM.Count - 1; i++)
                    {
                        <div class="col-md-12" style="margin:1%">
                            <div class="col-md-3">&nbsp;</div>
                            <div class="media col-md-6" style="border: solid 2px #4AA3DF;padding: 5px;border-radius: 10px;">
                                <div class="media-left"><a href="@Model.leaderVM[i].profileurl"><img src="@Model.leaderVM[i].userlogo" alt="" class="circle"></a></div>
                                <div class="media-body media-middle">
                                    <a style="text-align:right;" href="@Model.leaderVM[i].profileurl"><h5>@Model.leaderVM[i].displayname</h5></a>
                                    <div class="btn-group" style="float:right">
                                        <a style="color:white;padding-top:5px;" href="#" class="btn follower_count">+ @Model.leaderVM[i].BadgeName</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">&nbsp;</div>
                        </div>
                    }
                }
                else
                {
                    <span style="color:red;font-weight:bold;">No Top Leaders...</span>
                }

            </div>
        </div>
    </div>
</section>


<!-- Preloader -->
<div id="preloader">
    <div id="status">&nbsp;</div>
</div>

<!--jQuery, Bootstrap and other vendor JS-->
<!--jQuery-->
<script src="js/jquery-3.2.1.min.js"></script>

