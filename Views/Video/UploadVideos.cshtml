@model Kalikoe.ViewModels.VideoViewModel
@{
    Layout = "~/Views/Home/KalikoeMaster1.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Kalikoe</title>

    <!-- Favicon -->
    <link rel="icon" href="images/favicon.png" type="image/png" />

    <!--Bootstrap and Other Vendors-->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="css/magnific-popup.css">
    <link rel="stylesheet" href="vendors/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="vendors/bootstrap-select/css/bootstrap-select.min.css" media="screen">

    <!--Fonts-->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>

    <!--Theme Styles-->
    <link rel="stylesheet" href="css/default/style.css">
    <link rel="stylesheet" href="css/responsive/responsive.css">

    <!--[if lt IE 9]>
      <script src="js/html5shiv.min.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->

</head>
<body class="home">
    <section class="row" style="background-color:white">

        <div class="row media-grid content_video_posts">
            @using (Html.BeginForm("UploadVideos", "Video", FormMethod.Post, new { style = "width:95%", @class = "container-fluid signup_form auth_form", enctype = "multipart/form-data" }))
            {
                <div class="form-inner row">
                    <div class="form-header row m0">
                        <h4>Upload Video/Image</h4>
                    </div>
                    <div class="form-body row m0">
                        @Html.TextBoxFor(m => m.videoVM.title, new { @class = "form-control", @placeholder = "Title", @required = "true", @style = "width:92%" })<br />
                        @Html.TextBoxFor(m => m.videoVM.videourl, new { @class = "form-control", @placeholder = "Video Url", @style = "width:92%" })<br />
                        <span style="font-size:12px">(supported website:dailymotion.com,vimeo.com and youtube.com)</span><br /><br />
                        Or Upload Image/Video <br /><br />
                        <input type="file" class="form-control" name="file1" width="200px" placeholder="Thumbnail(Optional)" /><br />
                        @Html.TextAreaFor(m => m.videoVM.description, new { @class = "form-control", @placeholder = "Description", @required = "true", @cols = "40", @rows = "5" })            <br />
                        @Html.TextBoxFor(m => m.videoVM.tags, new { @class = "form-control", @placeholder = "Tags", @required = "true", @style = "width:92%" })

                        <input type="submit" value="Upload" class="btn btn-default form-control">
                    </div>
                   
                </div>
            }
        </div>
    </section>


    <!-- Preloader -->
    <div id="preloader">
        <div id="status">&nbsp;</div>
    </div>

    <!--jQuery, Bootstrap and other vendor JS-->
    <!--jQuery-->
    @*<script src="js/jquery-3.2.1.min.js"></script>*@

    <!--Bootstrap JS-->
    @*<script src="js/bootstrap.min.js"></script>*@

    <!--jScroll-->
    <script src="js/jquery.jscroll.min.js"></script>

    <!--Magnific Popup-->
    <script src="js/jquery.magnific-popup.min.js"></script>

    <!--Bootstrap Select-->
    <script src="vendors/bootstrap-select/js/bootstrap-select.min.js"></script>

    <!--Theme JS-->
    <script src="js/theme.js"></script>
    <style>
        .signup_form .form-inner {
            width: 500px !important;
            margin-top: 20px !important;
        }

        .auth_form {
            height: auto !important;
        }
    </style>
    <script src="https://cdn.ckeditor.com/4.10.0/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace($("#videoVM_description").attr("name"));
    </script>
    <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.1.0/cookieconsent.min.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.1.0/cookieconsent.min.js"></script>
    <script src="/js/popup.js"></script>
    <div id="dvPopup" class="simplePopup1" style="background-color:white;left:0px !important;color:black !important;overflow: scroll;height:80%;">
        @if (Session["userid"] != null)
        {<textarea cols="70" rows="4">http://kali-tv/signup?refer=@Session["encemailaddress"].ToString()</textarea>}
    </div>
    <script>
        function fnPopRefer() {
            $('#dvPopup').simplePopup({
                centerPopup: true,
                open: function () { },
                closed: function () { }
            });
        }
    </script>

    <style>
        .load-full-screen {
            margin-top: -11px;
        }

        .simplePopup {
            display: none;
            position: fixed !important;
            z-index: 3;
            color: #fff;
            padding: 8px;
            width: 30%;
            min-width: 30%;
            padding: 3%;
        }

        .simplePopup1 {
            display: none;
            position: fixed !important;
            z-index: 3;
            color: #fff;
            padding: 8px;
            width: 45%;
            min-width: 45%;
            padding: 3%;
            top: 20% !important;
 
        }

        .simplePopupClose {
            float: right;
            font-weight: bold;
        }

        .simplePopupBackground {
            display: none;
            background: #000;
            position: fixed !important;
            height: 100%;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1;
        }
    </style>
    @if (ViewBag.success != null)
    {
        <script type='text/javascript'>
            $(document).ready(function () {
                $('#dvThankyou').simplePopup({
                    centerPopup: true,
                    open: function () { },
                    closed: function () { }
                });
            });
        </script>
    }
    <div id="dvThankyou" class="simplePopup1" style="background-color:white;left:0px !important;color:black !important;overflow: scroll;height:60%;">
        <div style="padding: 28% 0% 0 0%;"><span style="color:#FF8E52;font-weight:bold;font-size:25px;text-align: center;">Thank you for uploading video/image.</span></div>
    </div>
</body>
